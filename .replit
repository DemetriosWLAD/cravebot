modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["curl", "git"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "CraveBreaker Deploy"

[[workflows.workflow]]
name = "CraveBreaker Deploy"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
waitForPort = 5000

[deployment]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 5000
externalPort = 80
